<ListBoxItem x:Class="Zetris.StyleViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             AllowDrop="True" DragOver="StyleDragOver" Drop="StyleDrop">

    <ListBoxItem.ContextMenu>
        <ContextMenu>
            <MenuItem Header="New" Click="New" />
            <MenuItem Header="Duplicate" Click="Duplicate" />
            <MenuItem Header="Rename" Click="Rename" />
            <MenuItem Header="Delete" Click="Delete" />
            <MenuItem Header="Import" Click="Import" />
            <MenuItem Header="Export" Click="Export" />
        </ContextMenu>
    </ListBoxItem.ContextMenu>

    <Grid Background="Transparent" PreviewMouseMove="StyleDrag">
        <TextBlock VerticalAlignment="Center" x:Name="Text" />

        <TextBox Opacity="0" IsEnabled="False" IsHitTestVisible="False" Background="#161616" HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="0 1" x:Name="Input"
                 LostFocus="InputLostFocus" KeyUp="InputKeyUp" />
    </Grid>
</ListBoxItem>
