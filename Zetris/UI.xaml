<Controls:MetroWindow x:Class="Zetris.UI"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:Zetris="clr-namespace:Zetris"
                      Title="Zetris Configuration" TitleCharacterCasing="Normal" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
                      BorderThickness="0" Background="#0A0A0A" Foreground="#DCDCDC" GlowBrush="{DynamicResource AccentColorBrush}"
                      SizeToContent="WidthAndHeight">

    <StackPanel Margin="15 10">
        <StackPanel Margin="0 0 0 15" HorizontalAlignment="Center">
            <TextBlock Margin="5 0 5 1" Foreground="#707070" Text="Inactive" />
            
            <Border BorderBrush="#202020" Height="1" BorderThickness="0 0 0 1" />
        </StackPanel>

        <Grid Margin="0 0 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Margin="0 0 5 0" VerticalAlignment="Center" Text="Style:" />

            <ComboBox Grid.Column="1" Height="14" SelectedIndex="0" x:Name="Style" SelectionChanged="StyleChanged">
                <ComboBoxItem Content="T-Spin+" />
                <ComboBoxItem Content="T-Spin" />
                <ComboBoxItem Content="Combo" />
                <ComboBoxItem Content="No Hold" />
                <ComboBoxItem Content="4-Wide" />
                <ComboBoxItem Content="TST" />
                <ComboBoxItem Content="Downstack" />
            </ComboBox>
        </Grid>

        <Zetris:Dial Margin="0 0 0 5" Title="Speed:" Scale="0.5" Minimum="10" Maximum="100" Unit="%" x:Name="Speed" Changed="SpeedChanged" />

        <Border Margin="0 0 0 5" BorderBrush="#202020" Height="1" BorderThickness="0 0 0 1" />

        <CheckBox Margin="0 0 0 5" Content="Perfect Clear Finder" x:Name="PerfectClear" Click="PerfectClearChanged" />

        <CheckBox Margin="0 0 0 5" Content="Center 4-Wide" x:Name="C4W" Click="C4WChanged" />
        
        <Border Margin="0 0 0 5" BorderBrush="#202020" Height="1" BorderThickness="0 0 0 1" />

        <Zetris:Dial Margin="0 0 0 5" Title="MP Arcade Player:" Scale="0.5" FillStart="False" Default="2" Minimum="1" Maximum="4" Unit="P" x:Name="Player" Changed="PlayerChanged" />

        <CheckBox Content="Gamepad Connected" />
    </StackPanel>
</Controls:MetroWindow>
